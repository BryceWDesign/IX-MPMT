// software/logging/run_manifest.schema.json
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IX-MPMT Run Manifest",
  "type": "object",
  "required": [
    "run_id",
    "utc_timestamp",
    "repo",
    "hardware",
    "daq",
    "excitation",
    "calibration"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 3 },
    "utc_timestamp": { "type": "string", "minLength": 10 },
    "operator": { "type": "string" },
    "notes": { "type": "string" },

    "repo": {
      "type": "object",
      "required": ["name", "git_commit"],
      "properties": {
        "name": { "type": "string" },
        "git_commit": { "type": "string", "minLength": 7 }
      }
    },

    "hardware": {
      "type": "object",
      "required": ["architecture", "core_capsule", "pods", "sensor_skin"],
      "properties": {
        "architecture": { "type": "string", "enum": ["H6-C12"] },
        "core_capsule": {
          "type": "object",
          "required": ["version", "mount_indexed"],
          "properties": {
            "version": { "type": "string" },
            "mount_indexed": { "type": "boolean" },
            "shielding": { "type": "string" }
          }
        },
        "pods": {
          "type": "array",
          "minItems": 6,
          "maxItems": 6,
          "items": {
            "type": "object",
            "required": ["position", "pod_id", "role"],
            "properties": {
              "position": { "type": "integer", "minimum": 1, "maximum": 6 },
              "pod_id": { "type": "string" },
              "role": { "type": "string", "enum": ["emitter", "dummy", "sensor"] }
            }
          }
        },
        "sensor_skin": {
          "type": "object",
          "required": ["nodes_used"],
          "properties": {
            "nodes_used": { "type": "array", "items": { "type": "string" } },
            "geometry_notes": { "type": "string" }
          }
        }
      }
    },

    "daq": {
      "type": "object",
      "required": ["timebase", "sample_rates_hz", "channels"],
      "properties": {
        "timebase": { "type": "string", "enum": ["daq_led", "controller_led"] },
        "sample_rates_hz": {
          "type": "object",
          "additionalProperties": { "type": "number", "minimum": 0.1 }
        },
        "channels": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "unit"],
            "properties": {
              "name": { "type": "string" },
              "unit": { "type": "string" },
              "scale": { "type": "number" },
              "offset": { "type": "number" }
            }
          }
        }
      }
    },

    "excitation": {
      "type": "object",
      "required": ["phase_map_deg", "codes", "sync_out_recorded"],
      "properties": {
        "phase_map_deg": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        },
        "codes": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "carrier_frequency_hz": { "type": "number", "minimum": 0 },
        "chip_duration_s": { "type": "number", "minimum": 0 },
        "sync_out_recorded": { "type": "boolean" }
      }
    },

    "calibration": {
      "type": "object",
      "required": ["force_calibration_method", "pre_run", "post_run"],
      "properties": {
        "force_calibration_method": { "type": "string" },
        "pre_run": { "type": "string" },
        "post_run": { "type": "string" },
        "constants": {
          "type": "object",
          "additionalProperties": { "type": ["number", "string"] }
        }
      }
    }
  },
  "additionalProperties": false
}
